<Page x:Class="GhostSafe.Page0"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
      xmlns:local="clr-namespace:GhostSafe"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="Page0">

    <materialDesign:DialogHost Identifier="RootDialog">
        <Grid>
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <Expander
                        HorizontalAlignment="Stretch"
                        IsExpanded="True"
                        Name="passwordHeader"
                        Header="{DynamicResource PasswordSetting}">
                        <StackPanel
                             Orientation="Vertical"
                             Margin="24,8,24,16">
                            <TextBlock
                                FontSize="14" Margin="0 0 0 5" TextWrapping="Wrap"
                                Text="{DynamicResource PasswordAuth}" />
                            <TextBlock
                                FontSize="13" Margin="0 0 0 5" TextWrapping="Wrap"
                                Foreground="DarkOrange"
                                Text="{DynamicResource PasswordAttention}" />
                            <PasswordBox
                                Name="passwordBox" HorizontalAlignment="Left"
                                Style="{StaticResource MaterialDesignFilledPasswordBox}"
                                VerticalAlignment="Center" MinWidth="200"
                                materialDesign:HintAssist.Hint="Password" />
                        </StackPanel>
                    </Expander>
                    <Expander
                        HorizontalAlignment="Stretch"
                        IsExpanded="True"
                        Header="{DynamicResource DownloadFolder}">
                        <StackPanel
                             Orientation="Vertical"
                             Margin="24,8,24,16">
                            <TextBlock
                                FontSize="14" Margin="0 0 0 5"
                                Text="{DynamicResource DownloadFolderRequest}" />
                            <TextBox
                                Name="DownloadFolder" FontSize="14" Height="40"
                                Style="{StaticResource MaterialDesignTextBox}" />
                        </StackPanel>
                    </Expander>
                    <Expander
                        HorizontalAlignment="Stretch"
                        IsExpanded="True"
                        Header="{DynamicResource EncryptFolder}">
                        <StackPanel
                             Orientation="Vertical"
                             Margin="24,8,24,12">
                            <TextBlock
                                FontSize="14" Margin="0"
                                Text="{DynamicResource EncryptFolderRequest}" />
                            <TextBlock
                                FontSize="14" Margin="0 0 0 5"
                                Text="{DynamicResource EncryptFolderComment}" />
                            <CheckBox
                                Name="EncryptCheck" IsChecked="True"
                                Click="EncryptCheck_Click"
                                Style="{StaticResource MaterialDesignLightCheckBox}"
                                Content="{DynamicResource EncryptFolderUse}" />
                            <TextBox
                                Name="EncryptFolder" FontSize="14" Height="40"
                                IsEnabled="False"
                                Style="{StaticResource MaterialDesignTextBox}" />
                        </StackPanel>
                    </Expander>

                    <!--Save settings-->
                    <Button Click="Button_Click" Margin="0, 20"
                        Content="{DynamicResource SavedSetting}" Width="150"
                        Style="{StaticResource MaterialDesignRaisedButton}">
                    </Button>

                </StackPanel>
            </ScrollViewer>

        </Grid>
    </materialDesign:DialogHost>
</Page>
