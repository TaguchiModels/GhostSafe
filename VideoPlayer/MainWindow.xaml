<Controls:MetroWindow x:Class="VideoPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vlc="clr-namespace:LibVLCSharp.WPF;assembly=LibVLCSharp.WPF"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d"
        ResizeMode="CanResize"
        WindowStartupLocation="Manual"
        Title="Video Window">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- スライダー -->
            <RowDefinition Height="*"/>
            <!-- ビデオ -->
            <RowDefinition Height="Auto"/>
            <!-- コントロールバー -->
        </Grid.RowDefinitions>

        <!-- 再生位置スライダー -->
        <Slider Style="{StaticResource MaterialDesign3.MaterialDesignSlider}"
            x:Name="positionSlider" Grid.Row="0"
            Minimum="0" Maximum="1"
            Orientation="Horizontal"
            Margin="10"
            ValueChanged="PositionSlider_ValueChanged"
            PreviewMouseLeftButtonDown="PositionSlider_MouseDown"
            PreviewMouseLeftButtonUp="PositionSlider_MouseUp"/>

        <!-- ビデオ表示 -->
        <vlc:VideoView x:Name="videoView" Grid.Row="1" />

        <!-- コントロールバー -->
        <StackPanel x:Name="controlBar" Grid.Row="2" Orientation="Horizontal" 
                    HorizontalAlignment="Center" Margin="10" >
            <Button Click="RewindButton_Click" Margin="5" Name="RewindBtn" IsEnabled="True"
                Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}">
                <materialDesign:PackIcon Kind="Rewind5" Height="20" Width="20" />
            </Button>
            <Button Click="StartButton_Click" Margin="5"
                Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}">
                <materialDesign:PackIcon Kind="Play" Height="20" Width="20" />
            </Button>
            <Button Click="PauseButton_Click" Margin="5"
                Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}">
                <materialDesign:PackIcon Kind="Pause" Height="20" Width="20" />
            </Button>
            <Button Click="ForwardButton_Click" Margin="5" Name="ForwardBtn" IsEnabled="True"
                Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}">
                <materialDesign:PackIcon Kind="FastForward5" Height="20" Width="20" />
            </Button>

            <StackPanel Orientation="Vertical">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Loop" VerticalAlignment="Center" Margin="5,0"/>
                    <ToggleButton x:Name="loopCheckBox"
                          Style="{StaticResource MaterialDesignSwitchToggleButton}"
                          IsChecked="True"
                          VerticalAlignment="Center" />
                    <StackPanel Orientation="Horizontal" Margin="10,0,0,0">
                        <TextBlock Text="Volume" VerticalAlignment="Center" Margin="5,0"/>
                        <Slider x:Name="volumeSlider" Minimum="0" Maximum="100" Width="100"
                            ValueChanged="VolumeSlider_ValueChanged"/>
                    </StackPanel>
                    <TextBlock x:Name="timeLabel" Text="00:00 / 00:00"
                       VerticalAlignment="Center" Margin="10" FontSize="14"/>
                </StackPanel>

                <TextBlock Text="Escキーで画面拡張 (Extend screen with Esc key)" FontSize="14"
                           Foreground="Purple" TextAlignment="Center" />
            </StackPanel>

        </StackPanel>

    </Grid>

</Controls:MetroWindow>
